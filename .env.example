# Redis Configuration
# Redis version to use
REDIS_VERSION=latest

# Redis bind address (interface to listen on)
REDIS_BIND_ADDRESS=127.0.0.1

# Redis Persistence Configuration
# Enable AOF (Append Only File) persistence
# yes: Enable AOF, no: Use RDB only
REDIS_APPENDONLY=no

# AOF synchronization strategy
# always: Sync every write (safest but slowest)
# everysec: Sync every second (recommended, balances performance and safety)
# no: Let OS decide when to sync (fastest but least safe)
REDIS_APPENDFSYNC=everysec

# RDB save strategy (format: seconds changes)
# Default: At least 1 change in 900 seconds, 10 changes in 300 seconds, 10000 changes in 60 seconds
REDIS_SAVE="900 1 300 10 60 10000"

# Redis Memory Configuration
# Maximum memory limit (keys will be deleted according to eviction policy when exceeded)
REDIS_MAXMEMORY=256mb

# Memory eviction policy
# volatile-lru: Use LRU algorithm to remove keys with expiration set
# allkeys-lru: Use LRU algorithm to remove any key (recommended)
# volatile-lfu: Use LFU algorithm to remove keys with expiration set
# allkeys-lfu: Use LFU algorithm to remove any key
# volatile-random: Remove random keys with expiration set
# allkeys-random: Remove random keys
# volatile-ttl: Remove keys that are about to expire
# noeviction: Don't remove any keys, return error on write
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Redis Resource Limits
# CPU limit (1.0 = 1 CPU core)
REDIS_CPU_LIMIT=1.0

# Container memory limit
REDIS_MEMORY_LIMIT=512M

# Redis Commander Configuration
# Redis Commander version
REDIS_COMMANDER_VERSION=latest

# Redis Commander bind address (interface to listen on)
REDIS_COMMANDER_BIND_ADDRESS=127.0.0.1

# Redis Commander web interface access port
REDIS_COMMANDER_PORT=18081

# Redis Commander resource limits
REDIS_COMMANDER_CPU_LIMIT=0.5
REDIS_COMMANDER_MEMORY_LIMIT=256M

# Logging Configuration
# Maximum size of a single log file
MAX_LOG_FILE_SIZE=10m

# Number of log files to keep
MAX_LOG_FILE_COUNT=3
